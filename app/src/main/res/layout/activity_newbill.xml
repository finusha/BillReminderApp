<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill Name"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <!-- Bill name input -->
    <EditText
        android:id="@+id/bill_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter bill name"
        android:inputType="text"
        android:layout_marginBottom="10dp"/>
    <!-- Amount due input -->
    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Due"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/amount_due_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount due"
        android:inputType="numberDecimal"
        android:layout_marginBottom="10dp"/>

    <!-- Due date input with date picker dialog -->
    <TextView
        android:id="@+id/due_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/due_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select date"
        android:inputType="none"
        android:focusable="false"
        android:onClick="showDatePickerDialog"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- List button -->
        <Button
            android:id="@+id/list_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List"/>

        <!-- Save button -->
        <Button
            android:id="@+id/save_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"/>
    </LinearLayout>
</LinearLayout>